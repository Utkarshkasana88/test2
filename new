        <version>1.0.0-beta.25</version>
    </dependency>

    <!-- (Optional) annotations -->
    <dependency>
        <groupId>io.opentelemetry</groupId>
        <artifactId>opentelemetry-api</artifactId>
        <version>1.36.0</version>
    </dependency>
</dependencies>


export APPLICATIONINSIGHTS_CONNECTION_STRING="InstrumentationKey=XXXX;IngestionEndpoint=https://<region>.in.applicationinsights.azure.com/"
